!!! XML
%ncx{ :xmlns     => "http://www.daisy.org/z3986/2005/ncx/",
      :version   => "2005-1",
      "xml:lang" => "en" }
  %head
    - book.info.editions.each do |edition|
      - if edition.name == "EPUB"
        %meta{:name => "dtb:uid", :content => edition.isbn }
  %docTitle
    %text= book.info.title.main
  %navMap
    - book.navmap.each do |navpoint|
      %navPoint{ :id => navpoint.id, "playOrder" => navpoint.play_order }
        %navLabel
          %text= navpoint.text.gsub(/<\/?[^>]*>/, "")
        %content{:src => navpoint.src }
