.cat-entry__details
  .cat-entry__details__image#js-deepzoom
  .cat-entry__details__data#entry-template-container
  .cat-entry__details__close
    %i.close-button
  %template#entry-template.cat-entry__details__data__item
    %table.cat-entry__tombstone
      %tbody
        %tr
          %td
            %strong Catalogue Number
          %td
            %strong#entry-cat-number
        %tr
          %td Inventory Number
          %td#entry-inv-number
        %tr
          %td Date
          %td#entry-date
        %tr
          %td Dimensions
          %td#entry-dimensions
        %tr
          %td Condition and Fabric
          %td#entry-condition
        %tr
          %td Type
          %td#entry-type
        %tr
          %td Place
          %td#entry-place
    .cat-entry__details__text
      .section.description
        %h3 Description
        %p#entry-description
      .section.iconography.is-hidden
        %h3 Discus Iconography
        %p#entry-iconography
      .section.provenance.is-hidden
        %h3 Provenance
        %p#entry-provenance
      .section.parallels
        %h3 Parallels
        %p#entry-parallels
      .section.discussion.is-hidden
        %h3 Discussion
        %p#entry-discussion
      .section.bibliography.is-hidden
        %h3 Bibliography
        %p#entry-bibliography
